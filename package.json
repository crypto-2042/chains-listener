{
  "name": "chains-listener",
  "version": "0.1.0",
  "description": "Multi-chain event monitoring tool for blockchain events including wallet transfers and token minting",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "type-check": "bun tsc --noEmit",
    "lint": "bunx biome check src/",
    "lint:fix": "bunx biome check src/ --apply"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "solana",
    "tron",
    "event-monitoring",
    "cryptocurrency",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.13.2",
    "@solana/web3.js": "^1.95.2",
    "@mysten/sui.js": "^0.54.1",
    "bitcoinjs-lib": "^6.1.6",
    "tronweb": "^6.0.0",
    "redis": "^4.7.0",
    "winston": "^3.14.2",
    "zod": "^3.23.8",
    "axios": "^1.7.4",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/node-cron": "^3.0.11",
    "@biomejs/biome": "^1.8.3",
    "typescript": "^5.5.4",
    "bun-types": "^1.1.24"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/chains-listener.git"
  }
}